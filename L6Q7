#include<stdio.h>
#include<math.h>
//questao 7 lista 6

int main()
{
    int a,b,c,d, med;
    printf("digite quatro valores com separacao de um espaco: \n");
    scanf("%i %i %i %i", &a, &b, &c, &d);
    med=(a*1+b*2+c*3+d*4)/(1+2+3+4);
    printf("media ponderada igual a: %i", med);
    return 0;
}
